{{#if connectedUser}}
{{> miniNav}}
{{/if}}
{{#with puzzle}}
    <h1>{{title}}</h1>
    <input value="{{colors}}" id="colors" hidden/>
    <input value="{{items}}" id="items" hidden/>
    <input value="{{startRow}}" id="startRow" hidden/>
    <input value="{{startCol}}" id="startCol" hidden/>
    <input value="{{startDir}}" id="startDir" hidden/>
{{/with}}


<div id="container"> 
<div id="grid"></div>
<div id="palette">
    <div id="instructions">
        {{#each myfunctions}}
                 <div class="functions">
                     <p>f{{@index}}: </p>
                    {{#each this}}
                      <div class="array"></div> 
                    {{/each}}  
                </div>
        {{/each}}

    </div>
    <div id="controls">
        <div id="play"></div>
        <div id="next"></div>
        <div id="stop"></div>
    </div>
</div>
</div>

<script src="/js/play.js"></script>
